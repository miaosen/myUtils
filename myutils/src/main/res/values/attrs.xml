    <!-- 分页列表 -->
    <declare-styleable name="PagingListRcView">
        <!-- 适配器item -->
        <attr name="itemLayout" format="reference" />
        <!-- 设置这个地址会覆盖掉框架的请求地址 -->
        <attr name="url"  />
        <!-- Sql语句 -->
        <attr name="sql" />
        <!-- action类名-->
        <attr name="actionClass" />
        <!-- 方法名-->
        <attr name="actionName" />
    </declare-styleable>

